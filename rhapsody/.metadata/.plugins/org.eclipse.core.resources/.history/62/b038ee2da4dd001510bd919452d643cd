[#package generateComponent]
[#import generateUtile.*]
[#template public genComponent(c:fiacreMM.Component)]
	Component ${c.Name} is 
	var
		sensor0 : int := 0,
		sensor1 : int := 1,
		sensor2 : int := 2,
		sensor3 : int := 3,
		sensor4 : int := 4
		
	port 
		[#foreach process in c.instances]
			[#foreach uniqueTrigger in process.alluniqueTrigger]
				${uniqueTrigger.Name} : none
			[/#foreach]
		[/#foreach]
	par
	
[#set nbProcess = 0]
[#foreach process in c.instances]
	[#if c.ProcessSize==0]
		${process.Name}
	[#else]
		[#if nbProcess == c.ProcessSize -1]
			${process.Name}
		[#else]
			${process.Name},
			[#set nbProcess = nbProcess+1]
		[/#if]
	[/#if]
[/#foreach]
		
	
[/#template]
